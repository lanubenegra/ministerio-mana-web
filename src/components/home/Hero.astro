<div class="relative min-h-[140vh] w-full overflow-hidden bg-cosmic-900" data-section="hero">
  <!-- Layer 1: Stars / Nebula Background -->
  <div class="fixed inset-0 z-0 opacity-80 pointer-events-none">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-[#1e293b] via-[#0b0d17] to-[#000000]"></div>
    <div class="star-field absolute inset-0 opacity-40"></div>
  </div>

  <!-- Layer 2: Main Title (Parallax Target) -->
  <div class="relative z-10 flex h-screen flex-col items-center justify-center text-center px-4">
    <h1 class="font-display text-[12vw] font-black leading-none tracking-tighter text-starlight-100 mix-blend-overlay opacity-90 lg:text-[10vw]">
      MINISTERIO <br /> MANÁ
    </h1>
    <p class="mt-6 max-w-lg text-lg font-light tracking-[0.2em] uppercase text-accent-cyan/80">
      Restauración &bull; Propósito &bull; Vida
    </p>
  </div>

  <!-- Layer 3: Foreground (Floating Elements) -->
  <div class="absolute bottom-0 left-0 right-0 z-20 flex justify-center pb-20">
      <div class="glass-panel backdrop-blur-md px-8 py-6 rounded-2xl border border-glass-border">
          <span class="text-sm font-light text-starlight-300">Descubre nuestra historia &darr;</span>
      </div>
  </div>
</div>

<style>
  .glass-panel {
    background: var(--glass-surface);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
  }
</style>
