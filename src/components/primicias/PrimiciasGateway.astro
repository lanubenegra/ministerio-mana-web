---
import TurnstileWidget from '@components/TurnstileWidget.astro';

interface Props {
  country?: string;
  rates?: any;
}

const { country = 'CO', rates } = Astro.props;

// Determine default gateway based on country
// CO -> Wompi
// US -> Pushpay / Stripe
// Others -> Stripe
const isColombia = country === 'CO';
const isUSA = country === 'US';
const isInternational = !isColombia;

// Currency handling
const currency = isColombia ? 'COP' : 'USD';
const symbol = isColombia ? '$' : 'USD $';
const placeholderAmount = isColombia ? '100000' : '50';
const minAmount = isColombia ? 10000 : 10;
---

<div id="primicias-gateway" class="w-full max-w-2xl mx-auto" data-country={country}>
  <!-- Glass Card -->
  <div class="relative bg-white/80 backdrop-blur-xl border border-white/50 rounded-[2.5rem] p-8 md:p-12 shadow-[0_20px_80px_-20px_rgba(212,175,55,0.3)] overflow-hidden">
    
    <!-- Decorator -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-amber-200/20 to-transparent rounded-bl-full pointer-events-none"></div>

    <header class="relative z-10 text-center mb-10">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-amber-50 border border-amber-100/50 mb-6">
        <span class="w-2 h-2 rounded-full bg-amber-500 animate-pulse"></span>
        <span class="text-[10px] font-bold tracking-widest text-amber-700 uppercase">Plataforma Segura</span>
      </div>
      <h2 class="text-3xl md:text-5xl font-display font-bold text-slate-800 mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-amber-600 to-yellow-600">Primicias</span> y Diezmos
      </h2>
      <p class="text-slate-500 text-lg leading-relaxed max-w-lg mx-auto">
        Honra a Dios con tus bienes y con las primicias de todos tus frutos.
        <span class="block text-sm text-slate-400 mt-1 font-medium italic">‚Äî Proverbios 3:9</span>
      </p>
    </header>
    
    <!-- Type Selector -->
    <div class="relative z-10 grid grid-cols-2 gap-2 p-1.5 bg-slate-100/50 rounded-2xl mb-8">
      <button 
        type="button" 
        class="tab-btn active px-6 py-3 rounded-xl text-sm font-bold transition-all duration-300 shadow-sm"
        data-target="primicia"
      >
        ‚ù§Ô∏è Primicia / Siembra
      </button>
      <button 
        type="button" 
        class="tab-btn px-6 py-3 rounded-xl text-sm font-bold text-slate-500 hover:text-slate-700 hover:bg-white/50 transition-all duration-300"
        data-target="diezmo"
      >
        üå± Diezmo
      </button>
    </div>

    <!-- Forms Container -->
    <div class="relative z-10 min-h-[400px]">
      
      <!-- Option 1: Colombia (Wompi) -->
      <form 
        id="form-wompi" 
        method="POST" 
        action="/api/wompi/checkout" 
        class={`gateway-form space-y-6 ${!isColombia ? 'hidden' : ''}`}
      >
        <div class="space-y-4">
          <div class="bg-amber-50/50 border border-amber-100 rounded-2xl p-4">
             <label class="block text-xs font-bold text-amber-800 uppercase tracking-wider mb-2">Tu Aporte ({isColombia ? 'Pesos Colombianos' : 'COP'})</label>
             <div class="relative">
               <span class="absolute left-4 top-1/2 -translate-y-1/2 text-amber-700/50 font-display text-xl">$</span>
               <input 
                 type="number" 
                 name="amount" 
                 min={minAmount} 
                 step="1000"
                 required 
                 placeholder={placeholderAmount}
                 class="w-full bg-transparent border-0 px-10 py-2 text-3xl font-display font-bold text-slate-800 placeholder-slate-300 focus:ring-0 focus:outline-none"
               />
               <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xs font-bold text-amber-700/40">COP</span>
             </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
             <div class="space-y-1">
               <label class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Nombre</label>
               <input type="text" name="fullName" required placeholder="Nombre completo" class="w-full bg-slate-50 border border-slate-200 rounded-xl px-4 py-3 text-slate-700 focus:border-amber-400 focus:ring-1 focus:ring-amber-400 outline-none transition-all" />
             </div>
             <div class="space-y-1">
               <label class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Email</label>
               <input type="email" name="email" required placeholder="tucorreo@email.com" class="w-full bg-slate-50 border border-slate-200 rounded-xl px-4 py-3 text-slate-700 focus:border-amber-400 focus:ring-1 focus:ring-amber-400 outline-none transition-all" />
             </div>
          </div>

          <!-- Hidden Fields -->
          <input type="hidden" name="currency" value="COP" />
          <input type="hidden" name="source" value="primicias-wompi" />
          <input type="hidden" name="donationType" id="wompi-type" value="ofrendas" /> <!-- Script updates this -->
          
          <TurnstileWidget appearance="interaction-only" />

          <button type="submit" class="w-full group relative overflow-hidden bg-gradient-to-r from-amber-500 to-yellow-500 text-white px-8 py-5 rounded-2xl font-bold text-lg shadow-xl shadow-amber-500/30 hover:shadow-amber-500/50 hover:-translate-y-1 transition-all duration-300">
             <span class="relative z-10 flex items-center justify-center gap-2">
               Sembrar Ahora
               <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
             </span>
             <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
          </button>
          
          <div class="text-center">
            <p class="text-[10px] text-slate-400">Procesado de forma segura por Wompi Colombia</p>
          </div>
        </div>
      </form>

      <!-- Option 2: International (Stripe) -->
      <form 
        id="form-stripe" 
        method="POST" 
        action="/api/stripe/checkout" 
        class={`gateway-form space-y-6 ${isColombia ? 'hidden' : ''}`}
      >
        <!-- Pushpay Callout for USA -->
        {isUSA && (
          <div class="mb-8 p-6 bg-[#C8102E]/5 border border-[#C8102E]/10 rounded-2xl text-center">
            <h4 class="font-bold text-[#C8102E] mb-2 flex items-center justify-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              Donaci√≥n USA (Pushpay)
            </h4>
            <p class="text-sm text-slate-600 mb-4">Si tienes cuenta en Pushpay o prefieres usar esa plataforma para tu deductibilidad en USA.</p>
            <a href="https://pushpay.com/g/ministeriomana" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-[#C8102E] text-white rounded-xl font-bold text-sm hover:brightness-110 transition-all shadow-lg shadow-[#C8102E]/20">
              Ir a Pushpay USA &rarr;
            </a>
          </div>
        )}

        <div class="space-y-4">
          <div class="bg-indigo-50/50 border border-indigo-100 rounded-2xl p-4">
             <label class="block text-xs font-bold text-indigo-800 uppercase tracking-wider mb-2">Tu Aporte (USD)</label>
             <div class="relative">
               <span class="absolute left-4 top-1/2 -translate-y-1/2 text-indigo-700/50 font-display text-xl">$</span>
               <input 
                 type="number" 
                 name="amount" 
                 min={minAmount} 
                 step="1"
                 required 
                 placeholder="100"
                 class="w-full bg-transparent border-0 px-8 py-2 text-3xl font-display font-bold text-slate-800 placeholder-slate-300 focus:ring-0 focus:outline-none"
               />
               <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xs font-bold text-indigo-700/40">USD</span>
             </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
             <div class="space-y-1">
               <label class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Nombre</label>
               <input type="text" name="fullName" required placeholder="Nombre completo" class="w-full bg-slate-50 border border-slate-200 rounded-xl px-4 py-3 text-slate-700 focus:border-indigo-400 focus:ring-1 focus:ring-indigo-400 outline-none transition-all" />
             </div>
             <div class="space-y-1">
               <label class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">Email</label>
               <input type="email" name="email" required placeholder="tucorreo@email.com" class="w-full bg-slate-50 border border-slate-200 rounded-xl px-4 py-3 text-slate-700 focus:border-indigo-400 focus:ring-1 focus:ring-indigo-400 outline-none transition-all" />
             </div>
          </div>

          <!-- Hidden Fields -->
          <input type="hidden" name="currency" value="USD" />
          <input type="hidden" name="source" value="primicias-stripe" />
          <input type="hidden" name="donationType" id="stripe-type" value="ofrendas" />
          
          <TurnstileWidget appearance="interaction-only" />

          <button type="submit" class="w-full group relative overflow-hidden bg-slate-900 text-white px-8 py-5 rounded-2xl font-bold text-lg shadow-xl shadow-slate-900/30 hover:shadow-slate-900/50 hover:-translate-y-1 transition-all duration-300">
             <span class="relative z-10 flex items-center justify-center gap-2">
               Donar con Tarjeta (Stripe)
               <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" /></svg>
             </span>
          </button>
          
          <div class="text-center">
            <p class="text-[10px] text-slate-400">Pagos internacionales seguros v√≠a Stripe</p>
          </div>
        </div>
      </form>
    </div>

    <!-- Switcher (Manual override) -->
    <div class="mt-8 pt-6 border-t border-slate-100 text-center">
      <button type="button" id="country-switch" class="text-xs font-bold text-slate-400 hover:text-amber-600 transition-colors uppercase tracking-widest">
        {isColombia ? '¬øNo est√°s en Colombia? Cambiar a Internacional' : '¬øEst√°s en Colombia? Cambiar a Pesos (Wompi)'}
      </button>
    </div>

  </div>
</div>

<style>
  .tab-btn.active {
    background-color: white;
    color: #b45309; /* amber-700 */
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
</style>

<script>
  // Simple Logic for Toggles
  const tabs = document.querySelectorAll('.tab-btn');
  const wompiType = document.getElementById('wompi-type');
  const stripeType = document.getElementById('stripe-type');
  
  tabs.forEach(btn => {
    btn.addEventListener('click', () => {
      // UI Update
      tabs.forEach(b => b.classList.remove('active', 'text-amber-700', 'bg-white', 'shadow-md'));
      tabs.forEach(b => b.classList.add('text-slate-500'));
      
      btn.classList.add('active');
      btn.classList.remove('text-slate-500');

      // Value Update
      const target = btn.dataset.target; // primicia | diezmo
      const val = target === 'diezmo' ? 'diezmos' : 'ofrendas'; // Map to backend types
      
      if (wompiType) wompiType.value = val;
      if (stripeType) stripeType.value = val;
    });
  });

  const countrySwitch = document.getElementById('country-switch');
  const wompiForm = document.getElementById('form-wompi');
  const stripeForm = document.getElementById('form-stripe');
  
  countrySwitch?.addEventListener('click', () => {
    // Just toggle visibility check
    const isWompiVisible = !wompiForm.classList.contains('hidden');
    
    if (isWompiVisible) {
      wompiForm.classList.add('hidden');
      stripeForm.classList.remove('hidden');
      countrySwitch.textContent = '¬øEst√°s en Colombia? Cambiar a Pesos (Wompi)';
    } else {
      wompiForm.classList.remove('hidden');
      stripeForm.classList.add('hidden');
      countrySwitch.textContent = '¬øNo est√°s en Colombia? Cambiar a Internacional';
    }
  });
</script>
