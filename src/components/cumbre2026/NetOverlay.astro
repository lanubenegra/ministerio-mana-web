<div class="absolute inset-0 z-[1] overflow-hidden pointer-events-none select-none mix-blend-overlay opacity-30">
    <!-- SVG Net Pattern -->
    <svg class="absolute w-[200%] h-[200%] -top-1/2 -left-1/2 animate-drift-slow" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
            <pattern id="net-pattern" x="0" y="0" width="8" height="8" patternUnits="userSpaceOnUse">
                <path d="M0 4 Q4 0 8 4 T16 4" fill="none" stroke="currentColor" stroke-width="0.1" class="text-brand-gold/50" />
                <path d="M0 4 Q4 8 8 4 T16 4" fill="none" stroke="currentColor" stroke-width="0.1" class="text-brand-teal/30" />
            </pattern>
