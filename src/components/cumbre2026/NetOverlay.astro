    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-brand-gold rounded-full blur-[1px] animate-float opacity-60"></div>
    <div class="absolute top-3/4 right-1/4 w-3 h-3 bg-brand-ocean rounded-full blur-[2px] animate-float-delayed opacity-40"></div>
