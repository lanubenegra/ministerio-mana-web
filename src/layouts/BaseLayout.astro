
---
import SEO from '@components/SEO.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import globalStyles from '../styles/global.css?url';
import lenisScript from '../scripts/lenis.ts?url';
import homeAnimationsScript from '../scripts/home-animations.ts?url';

const {
  title,
  description,
  image,
  type = 'website',
  structuredData,
  noindex = false,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---
<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <SEO {title} {description} {image} {type} {structuredData} {noindex} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href={globalStyles} />
    <!-- Turnstile: script global (NO inline) -->
    <script
      src="https://challenges.cloudflare.com/turnstile/v0/api.js"
      async
      defer
    ></script>
    <script src="/js/scroll-reveal.js" defer></script>
  </head>
  <body>
    {!hideHeader && <Header />}
    <main class="min-h-[60vh]"><slot /></main>
    {!hideFooter && <Footer />}
    
    <!-- Smooth Scroll & Parallax Animations -->
    <script src={lenisScript} type="module"></script>
    <script src={homeAnimationsScript} type="module"></script>
  </body>
</html>
