
---
import BaseLayout from '@layouts/BaseLayout.astro';
const PHOTOS = Array.from({length:12}).map((_,i)=>`https://picsum.photos/seed/mana${i}/1024/640`);
---
<BaseLayout title="Galería — Ministerio Maná" description="Repositorio de fotos (demo).">
  <section class="container-tight py-10">
    <h1 class="h1 mb-3">Galería</h1>
    <p class="text-sm text-gray-600">Conecta un almacenamiento (R2/Supabase Storage) y lista los álbumes.</p>
    <div class="grid gap-4 md:grid-cols-3">
      {PHOTOS.map(src => (<img src={src} alt="" class="rounded-lg border border-gray-200 dark:border-gray-800" loading="lazy" />))}
    </div>
  </section>
</BaseLayout>
