---
import BaseLayout from '@layouts/BaseLayout.astro';
import ChurchSelector from '@components/portal/ChurchSelector.astro';
import RegistrationModal from '@components/portal/RegistrationModal.astro';
import Sidebar from '@components/portal/Sidebar.astro';
---

<BaseLayout title="Portal Maná | Ministerio Maná" description="Gestiona tus aportes y eventos en el Portal Maná." hideHeader hideFooter>
  <main class="min-h-screen bg-[#F8FAFC] text-slate-800 selection:bg-[#293C74]/20">
    <div class="flex flex-col lg:flex-row min-h-screen">
      
      <!-- Sidebar / Navigation -->
      <!-- Sidebar / Navigation -->
      <Sidebar />

      <!-- Main Content Area -->
      <section class="flex-1 p-4 md:p-10 lg:p-16 relative overflow-y-auto">
        <div class="max-w-6xl mx-auto">
          
          <!-- Loading State (Skeleton) -->
          <div id="account-loading" class="space-y-10 animate-pulse">
            <div class="h-10 w-48 bg-slate-200 rounded-xl"></div>
            <div class="grid md:grid-cols-3 gap-6">
              <div class="h-40 bg-slate-200 rounded-[2rem]"></div>
              <div class="h-40 bg-slate-200 rounded-[2rem]"></div>
              <div class="h-40 bg-slate-200 rounded-[2rem]"></div>
            </div>
          </div>

            <div id="account-error" class="hidden text-center py-20">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-red-400/10 text-red-400 mb-6">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
            </div>
            <h2 class="text-2xl font-bold mb-2">Algo salió mal</h2>
            <p class="text-slate-600">No pudimos cargar la información de tu cuenta.</p>
            <button onclick="window.location.reload()" class="mt-6 px-6 py-2 bg-[#293C74] text-white rounded-xl hover:bg-[#293C74]/90 transition-all">Reintentar</button>
          </div>

          <div id="account-content" class="hidden space-y-12">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <div>
                <p class="text-[10px] font-bold text-slate-600 uppercase tracking-[0.3em]">Portal Maná</p>
                <h1 class="text-2xl font-display font-bold text-[#293C74]">Panel General</h1>
              </div>
              <a href="/eventos/cumbre-mundial-2026" class="inline-flex items-center gap-2 rounded-full border border-[#293C74]/20 px-4 py-2 text-xs font-bold uppercase tracking-widest text-[#293C74] hover:border-[#293C74]/60 hover:bg-[#293C74]/5 transition">
                Volver a la Cumbre
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7 7-7" />
                </svg>
              </a>
            </div>
            
            <!-- Tab: Resumen -->
            <div id="tab-resumen" class="tab-content space-y-10">
              <header>
                <h1 class="text-3xl lg:text-4xl font-display font-bold text-[#293C74] mb-2">¡Hola <span id="welcome-name" class="text-brand-teal">...</span>!</h1>
                <p class="text-slate-600">Este es el resumen de tu participación en los eventos Maná.</p>
              </header>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Status Card 1 -->
                <div class="bg-white border border-slate-100 rounded-[2rem] p-8 relative overflow-hidden group shadow-lg shadow-slate-200/50">
                  <div class="absolute top-0 right-0 p-4 opacity-[0.05] group-hover:scale-110 transition-transform text-[#293C74]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                  </div>
                  <p class="text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-4">Total Aportado</p>
                  <h3 id="stat-total-paid" class="text-4xl font-display font-bold text-[#293C74] leading-none">$0</h3>
                  <p class="text-xs text-brand-teal mt-2 font-bold">En todas tus reservas</p>
                </div>

                <!-- Status Card 2 -->
                <div class="bg-white border border-slate-100 rounded-[2rem] p-8 relative overflow-hidden group shadow-lg shadow-slate-200/50">
                   <div class="absolute top-0 right-0 p-4 opacity-[0.05] group-hover:scale-110 transition-transform text-[#F2C94C]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                  </div>
                  <p class="text-[10px] font-bold text-slate-600 uppercase tracking-widest mb-4">Próximo Abono</p>
                  <h3 id="stat-next-due" class="text-4xl font-display font-bold text-[#293C74] leading-none">-</h3>
                  <p class="text-xs text-[#F2C94C] mt-2 font-bold">Plan de cuotas activo</p>
                </div>

                <!-- Support Card -->
                <div class="bg-white border border-slate-200 rounded-[2rem] p-8 relative overflow-hidden group shadow-lg shadow-slate-200/50">
                  <div class="absolute inset-0 bg-gradient-to-br from-[#293C74]/5 to-transparent"></div>
                  <h3 class="relative text-lg font-black mb-2 text-[#293C74]">¿Necesitas ayuda?</h3>
                  <p class="relative text-xs text-slate-800 font-bold leading-relaxed mb-6">Si tienes dudas con tus aportes, nuestro equipo de soporte está listo para asistirte.</p>
                  <a href="https://wa.me/573148297534" class="relative inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-[#293C74] text-white text-sm font-bold hover:bg-[#293C74]/90 transition-all shadow-lg shadow-[#293C74]/20">
                    Soporte WhatsApp
                  </a>
                </div>
              </div>

              <!-- Important Alerts / Next Step -->
              <div id="plan-highlight" class="hidden relative p-1 rounded-[2rem] bg-gradient-to-r from-brand-teal/20 via-brand-gold/20 to-brand-teal/20 animate-border-flow overflow-hidden shadow-lg shadow-brand-teal/5">
                <div class="bg-white rounded-[calc(2rem-2px)] p-6 md:p-8 flex flex-col md:flex-row items-center gap-6">
                   <div class="w-16 h-16 rounded-2xl bg-[#F2C94C]/10 flex items-center justify-center text-[#F2C94C] shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1.5m.5 0v-4.5m0 0V11m0 5h1m2-1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" /></svg>
                   </div>
                   <div class="text-center md:text-left">
                      <h4 id="highlight-header" class="font-bold text-[#293C74]">Recordatorio de abono automático</h4>
                      <p class="text-slate-600 text-sm">Tu próxima cuota de <span id="highlight-amount" class="text-[#293C74] font-bold">...</span> para <span id="highlight-context" class="text-[#293C74] font-bold">Cumbre Mundial 2026</span> será procesada el <span id="highlight-date" class="text-[#293C74] font-bold">...</span>.</p>
                   </div>
                   <div class="md:ml-auto">
                      <button data-tab-trigger="reservas" class="text-sm font-bold text-brand-teal hover:underline px-4 py-2">Ver mis inscripciones →</button>
                   </div>
                </div>
              </div>
            </div>

            <!-- Tab: Reservas -->
            <div id="tab-reservas" class="tab-content hidden space-y-10">
              <header>
                <h1 class="text-3xl lg:text-4xl font-display font-bold text-[#293C74] mb-2">Mis Eventos</h1>
                <p class="text-slate-600">Gestiona tus inscripciones a eventos y planes de abono.</p>
              </header>

              <div class="space-y-10">
                <div class="space-y-6">
                   <h2 class="text-xs font-bold text-slate-600 uppercase tracking-[0.3em]">Eventos Inscritos</h2>
                   <div id="bookings-list" class="grid grid-cols-1 md:grid-cols-2 gap-6"></div>
                   <div id="bookings-empty" class="hidden p-12 text-center bg-white border border-slate-100 rounded-[2rem] shadow-sm">
                    <p class="text-slate-500">Aún no tienes inscripciones para la Cumbre 2026.</p>
                   </div>
                </div>

                <div class="space-y-6">
                   <h2 class="text-xs font-bold text-slate-600 uppercase tracking-[0.3em]">Planes de Abono</h2>
                   <div id="plans-list" class="grid grid-cols-1 md:grid-cols-2 gap-6"></div>
                   <div id="plans-empty" class="hidden p-12 text-center bg-white border border-slate-100 rounded-[2rem] shadow-sm">
                    <p class="text-slate-500">No tienes planes de abono activos.</p>
                   </div>
                </div>

                <div class="space-y-6">
                   <h2 class="text-xs font-bold text-slate-600 uppercase tracking-[0.3em]">Cuotas Pendientes</h2>
                   <div id="installments-list" class="space-y-4"></div>
                   <div id="installments-empty" class="hidden p-10 text-center bg-white border border-slate-100 rounded-[2rem] shadow-sm">
                    <p class="text-slate-500">No tienes cuotas pendientes en este momento.</p>
                   </div>
                </div>
              </div>
            </div>

            <!-- Tab: Pagos -->
            <div id="tab-pagos" class="tab-content hidden space-y-10">
              <header>
                <h1 class="text-3xl lg:text-4xl font-display font-bold text-[#293C74] mb-2">Mis Aportes</h1>
                <p class="text-slate-600">Registro detallado de aportes y abonos realizados.</p>
              </header>

              <div class="bg-white border border-slate-100 rounded-[2.5rem] overflow-hidden shadow-lg shadow-slate-200/50">
                <div class="overflow-x-auto">
                  <table class="min-w-full text-sm">
                    <thead>
                      <tr class="text-[10px] font-bold text-[#293C74] uppercase tracking-widest border-b border-slate-100 bg-slate-50/50">
                        <th class="text-left py-6 px-8">Fecha</th>
                        <th class="text-left py-6 px-8">Referencia</th>
                        <th class="text-left py-6 px-8">Detalle</th>
                        <th class="text-right py-6 px-8">Monto</th>
                        <th class="text-center py-6 px-8">Estado</th>
                      </tr>
                    </thead>
                    <tbody id="payments-table" class="divide-y divide-slate-50"></tbody>
                  </table>
                  <div id="payments-empty" class="hidden p-20 text-center">
                    <p class="text-slate-500">No hay aportes registrados en tu historial.</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Tab: Perfil -->
            <div id="tab-perfil" class="tab-content hidden space-y-10">
               <header>
                 <h1 class="text-3xl lg:text-4xl font-display font-bold text-[#293C74] mb-2">Mi Perfil</h1>
                 <p class="text-slate-600">Mantén tu información personal actualizada.</p>
               </header>

               <div class="max-w-3xl bg-white border border-slate-100 rounded-[2.5rem] p-8 md:p-10 space-y-8 shadow-lg shadow-slate-200/50">
                  <div class="grid gap-6">
                    <div class="space-y-2">
                       <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Nombre Completo</label>
                       <input type="text" id="profile-name" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium placeholder-slate-500">
                    </div>
                    <div class="space-y-2">
                       <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Correo Electrónico</label>
                       <input type="email" id="profile-email" disabled class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-slate-500 cursor-not-allowed">
                    </div>
                    <div class="space-y-2">
                       <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Rol</label>
                       <input type="text" id="profile-role" disabled class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-slate-500 cursor-not-allowed">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                      <div class="space-y-2">
                        <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Teléfono / WhatsApp</label>
                        <input type="text" id="profile-phone" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium placeholder-slate-500">
                      </div>
                      <div class="space-y-2">
                        <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Ciudad</label>
                        <input type="text" id="profile-city" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium placeholder-slate-500">
                      </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                      <div class="space-y-2">
                        <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Tipo de documento</label>
                        <select id="profile-document-type" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium">
                          <option value="">Selecciona una opción</option>
                          <option value="CC">CC</option>
                          <option value="CE">CE</option>
                          <option value="NIT">NIT</option>
                          <option value="TI">TI</option>
                          <option value="PAS">Pasaporte</option>
                        </select>
                      </div>
                      <div class="space-y-2">
                        <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Número de documento</label>
                        <input type="text" id="profile-document-number" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium placeholder-slate-500">
                      </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                      <div class="space-y-2">
                        <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">País</label>
                        <input type="text" id="profile-country" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium placeholder-slate-500">
                      </div>
                      <div class="space-y-2">
                        <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Mi relación con Maná</label>
                        <select id="profile-affiliation" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium">
                          <option value="">Selecciona una opción</option>
                          <option value="local">Asisto a una sede</option>
                          <option value="online">Soy Maná Online</option>
                          <option value="none">Prefiero no seleccionar</option>
                        </select>
                      </div>
                    </div>
                    <div id="profile-church-wrapper" class="space-y-2 hidden">
                      <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Nombre de la sede / iglesia</label>
                      <input type="text" id="profile-church-name" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium placeholder-slate-500" placeholder="Ej: Maná Medellín">
                    </div>
                  </div>


                  <div class="pt-4 flex items-center justify-between gap-4">
                     <p id="profile-status" class="text-sm font-medium"></p>
                     <button id="btn-save-profile" class="bg-[#293C74] text-white px-8 py-3 rounded-2xl font-bold hover:shadow-lg hover:shadow-[#293C74]/20 hover:-translate-y-0.5 transition-all text-sm">
                        Guardar Personales
                     </button>
                  </div>
               </div>

               <!-- Security Section -->
               <div class="max-w-3xl bg-white border border-slate-100 rounded-[2.5rem] p-8 md:p-10 space-y-6 shadow-lg shadow-slate-200/50">
                  <div>
                    <h3 class="text-lg font-bold text-[#293C74]">Seguridad</h3>
                    <p class="text-sm text-slate-600">Actualiza tu contraseña para ingresar sin enlace mágico.</p>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                      <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Nueva Contraseña</label>
                      <input type="password" id="security-new-password" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all placeholder-slate-400" placeholder="Mínimo 6 caracteres">
                    </div>
                    <div class="space-y-2">
                       <button id="btn-update-password" class="w-full h-full mt-6 md:mt-0 bg-white border border-[#293C74]/20 text-[#293C74] px-6 py-4 rounded-2xl font-bold hover:bg-[#293C74] hover:text-white transition-all text-sm">
                          Actualizar Contraseña
                       </button>
                    </div>
                  </div>
                  <p id="security-status" class="text-sm font-medium text-slate-500 min-h-[1.25rem]"></p>
                  
                  <!-- Passkeys Section (Hidden for now) -->
                  <div class="hidden pt-6 border-t border-slate-100 mt-2">
                     <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                        <div>
                           <div class="flex items-center gap-2 mb-1">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#293C74]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.131A8 8 0 008 8m8.363 12.18c.201-.06.401-.123.6-.192" /></svg>
                              <h4 class="font-bold text-[#293C74] text-sm">Passkeys (Huella / Rostro)</h4>
                           </div>
                           <p class="text-xs text-slate-600 max-w-sm">Vincula tu dispositivo para ingresar sin contraseña la próxima vez.</p>
                        </div>
                        <button id="btn-register-passkey" class="bg-white border border-[#293C74]/20 text-[#293C74] px-6 py-3 rounded-2xl font-bold hover:bg-[#293C74] hover:text-white transition-all text-xs flex items-center gap-2">
                           <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                           Vincular este dispositivo
                        </button>
                     </div>
                     <p id="passkey-status" class="text-xs text-center mt-2 font-medium"></p>
                  </div>
               </div>
            </div>

            <!-- Tab: Eventos (Antes Iglesia) -->
            <div id="tab-iglesia" class="tab-content hidden space-y-8">
              <!-- Header & Event Selector -->
              <header class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between p-1">
                <div>
                  <div class="flex items-center gap-3 mb-2">
                    <span class="px-3 py-1 rounded-full bg-brand-teal/10 text-brand-teal text-[10px] font-bold uppercase tracking-widest border border-brand-teal/20">Evento Activo</span>
                    <span id="church-selector-status" class="text-xs text-slate-400"></span>
                  </div>
                  <h1 id="iglesia-title" class="text-3xl lg:text-4xl font-display font-bold text-[#293C74]">Cumbre Mundial 2026</h1>
                  <p id="iglesia-subtitle" class="text-slate-600 mt-1">Gestión operativa y control de asistencia.</p>
                </div>
                
                <div class="flex flex-wrap items-center gap-3">
                   <!-- Church Selector (For Admin) -->
                   <div id="church-selector" class="hidden relative group z-20 w-full md:w-auto">
                     <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-[#293C74]">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                     </div>
                     <select id="church-selector-input" class="appearance-none w-full md:w-auto bg-white border border-slate-200 rounded-xl pl-10 pr-10 py-3 text-sm font-bold text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all shadow-sm hover:shadow-md cursor-pointer min-w-[240px]">
                       <option value="">Selecciona una iglesia</option>
                     </select>
                     <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none text-slate-400">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                     </div>
                   </div>

                   <!-- Event Selector (Mockup for now) -->
                   <button class="hidden md:flex items-center gap-2 px-4 py-3 rounded-xl bg-slate-100 hover:bg-slate-200 text-[#293C74] text-xs font-bold uppercase tracking-widest transition-colors">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                      Cambiar Evento
                   </button>
                </div>
              </header>

              <!-- USER VIEW: Personal Event Info (For Regular Users) -->
              <div id="church-dashboard-user" class="hidden space-y-6">
                <!-- Countdown -->
                <div id="event-countdown"></div>
                
                <!-- Payment Status / Enrollment Info -->
                <div id="my-payment-status"></div>
                
                <!-- My Group Members -->
                <div id="my-group-members"></div>
                
                <!-- WhatsApp Help Button -->
                <div id="event-whatsapp"></div>
                
                <!-- Policies and Conditions -->
                <div id="event-policies"></div>
              </div>

              <!-- MANAGEMENT VIEW: Church Management (For Pastors/Admins) -->
              <div id="church-dashboard-management">
                <!-- Global Empty State (When no church selected) -->
                <div id="church-dashboard-empty" class="py-20 text-center bg-white border border-slate-100 rounded-[3rem] shadow-sm">
                    <div class="w-24 h-24 bg-slate-50 text-slate-300 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                    </div>
                    <h3 class="text-xl font-bold text-[#293C74] mb-2">Selecciona una iglesia</h3>
                    <p class="text-slate-500 max-w-sm mx-auto">Para ver estadísticas, inscritos y gestionar eventos, selecciona una sede en el menú superior.</p>
                </div>

              <!-- Dashboard Details Content (Hidden until church selected) -->
              <div id="church-dashboard-content" class="hidden grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
                
                <!-- Main Data Column (8 Cols) -->
                <div class="lg:col-span-8 space-y-8">
                  
                  <!-- Quick Stats / Overview Cards -->
                  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                      <div class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm text-center">
                          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Total Inscritos</p>
                          <p class="text-2xl font-bold text-[#293C74]" id="stat-church-total">0</p>
                      </div>
                      <div class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm text-center">
                          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Abonos</p>
                          <p class="text-2xl font-bold text-brand-teal" id="stat-church-paid">0</p>
                      </div>
                      <div class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm text-center">
                          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Pendientes</p>
                          <p class="text-2xl font-bold text-yellow-500" id="stat-church-pending">0</p>
                      </div>
                       <div class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm text-center cursor-pointer hover:bg-slate-50 transition" onclick="document.getElementById('church-bookings-search').focus()">
                          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Acción</p>
                          <p class="text-xs font-bold text-[#293C74] mt-2">Buscar Inscrito</p>
                      </div>
                  </div>

                   <!-- Bookings Tablet Card -->
                   <div class="bg-white border border-slate-100 rounded-[2.5rem] shadow-xl shadow-slate-200/50 overflow-hidden min-h-[500px]">
                      <div class="px-8 py-6 border-b border-slate-50 flex flex-col md:flex-row md:items-center justify-between gap-4">
                         <h3 class="text-lg font-bold text-[#293C74]">Inscritos Recientes</h3>
                         
                         <div class="flex items-center gap-3">
                             <div class="relative">
                               <input id="church-bookings-search" type="search" class="bg-slate-50 border-none rounded-xl pl-9 pr-4 py-2 text-[#293C74] placeholder-slate-400 focus:ring-0 text-xs font-medium w-40 md:w-64 transition-all focus:w-72" placeholder="Buscar por nombre...">
                               <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400 absolute left-3 top-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                             </div>
                             
                             <button id="church-export-btn" class="p-2 text-slate-400 hover:text-brand-teal hover:bg-brand-teal/10 rounded-lg transition-colors" title="Exportar CSV">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                             </button>
                         </div>
                      </div>
                      
                      <div class="p-0">
                        <!-- Filters Bar -->
                        <div class="px-8 py-3 bg-slate-50/50 border-b border-slate-50 flex gap-2 overflow-x-auto">
                            <button class="px-3 py-1 rounded-full bg-[#293C74] text-white text-[10px] font-bold uppercase tracking-widest shadow-sm">Todos</button>
                            <button class="px-3 py-1 rounded-full bg-white text-slate-500 hover:text-[#293C74] text-[10px] font-bold uppercase tracking-widest border border-slate-100">Pagados</button>
                            <button class="px-3 py-1 rounded-full bg-white text-slate-500 hover:text-[#293C74] text-[10px] font-bold uppercase tracking-widest border border-slate-100">Pendientes</button>
                        </div>

                        <div class="p-6">
                            <p id="church-export-status" class="text-xs text-slate-500 mb-2"></p>
                            <div id="church-bookings-empty" class="rounded-2xl border border-dashed border-slate-200 bg-slate-50/60 p-12 text-center">
                              <p class="text-sm text-slate-600">No hay registros para mostrar.</p>
                            </div>
                            <div id="church-bookings-list" class="hidden space-y-0 divide-y divide-slate-50"></div>
                        </div>
                      </div>
                   </div>

                   <!-- Secondary Sections Grid -->
                   <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                       <!-- Installments -->
                       <div class="bg-white border border-slate-100 rounded-[2.5rem] p-8 shadow-lg shadow-slate-200/50">
                          <div class="flex items-center justify-between mb-6">
                            <h3 class="text-sm font-bold text-[#293C74]">Cuotas Pendientes</h3>
                            <span class="w-2 h-2 rounded-full bg-yellow-400"></span>
                          </div>
                          <div id="church-installments-empty" class="text-center py-8 text-xs text-slate-500">Todo al día.</div>
                          <div id="church-installments-list" class="hidden space-y-3"></div>
                       </div>
                       
                       <!-- Payments History -->
                       <div class="bg-white border border-slate-100 rounded-[2.5rem] p-8 shadow-lg shadow-slate-200/50">
                          <div class="flex items-center justify-between mb-6">
                            <h3 class="text-sm font-bold text-[#293C74]">Últimos Pagos</h3>
                            <button class="text-xs font-bold text-slate-400 hover:text-[#293C74]">Ver todos</button>
                          </div>
                          <div id="church-payments-empty" class="text-center text-xs text-slate-500 py-4">No hay pagos recientes.</div>
                          <div id="church-payments-list" class="hidden space-y-2"></div>
                       </div>
                   </div>
                </div>

                <!-- Right Column: Actions & Tools (4 Cols) -->
                <div class="lg:col-span-4 space-y-6">
                  
                  <!-- Primary Action (New Reg) -->
                  <div class="bg-[#293C74] rounded-[2.5rem] p-8 text-white relative overflow-hidden shadow-xl shadow-[#293C74]/30 group">
                    <div class="absolute top-0 right-0 p-6 opacity-10 group-hover:opacity-20 transition-opacity">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <div class="relative z-10">
                        <span class="inline-block px-3 py-1 bg-white/10 rounded-full text-[10px] font-bold uppercase tracking-widest mb-4 border border-white/20">Acción Rápida</span>
                        <h3 class="text-xl font-bold mb-2">Nueva Inscripción</h3>
                        <p class="text-white/70 text-sm mb-8 leading-relaxed">Registra participantes manualmente y gestiona pagos en efectivo directamente.</p>
                        
                        <button id="church-form-toggle" class="w-full py-4 bg-white text-[#293C74] rounded-2xl font-bold text-sm hover:bg-brand-teal hover:text-white hover:shadow-lg hover:shadow-brand-teal/20 transition-all flex items-center justify-center gap-2 group-hover:scale-[1.02]">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                          Registrar Ahora
                        </button>
                    </div>
                  </div>

                  <!-- Quick Tools Panel -->
                  <div class="bg-white border border-slate-100 rounded-[2.5rem] p-6 shadow-lg shadow-slate-200/50 space-y-6">
                      <!-- Team Section -->
                      <div>
                         <div class="flex items-center justify-between mb-4">
                            <h3 class="text-sm font-bold text-[#293C74]">Equipo</h3>
                            <button id="btn-toggle-invite" class="w-8 h-8 rounded-full bg-slate-50 text-[#293C74] hover:bg-brand-teal hover:text-white flex items-center justify-center transition-colors font-bold custom-transition">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                            </button>
                         </div>
                         
                         <!-- Toggleable Invite Form -->
                         <div id="church-invite-card" class="hidden mb-4 p-4 bg-slate-50 rounded-2xl border border-slate-100">
                             <div class="space-y-3">
                                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Invitar Colaborador</p>
                                <input id="church-invite-email" type="email" class="w-full bg-white border-slate-200 rounded-xl px-3 py-2 text-xs" placeholder="Correo electrónico">
                                <select id="church-invite-role" class="w-full bg-white border-slate-200 rounded-xl px-3 py-2 text-xs">
                                   <option value="church_member">Delegado (Ver)</option>
                                   <option value="church_admin">Pastor (Editar)</option>
                                </select>
                                <button id="church-invite-btn" class="w-full bg-[#293C74] text-white py-2 rounded-xl text-xs font-bold hover:bg-[#293C74]/90">Enviar Invitación</button>
                                <p id="church-invite-status" class="text-[10px] text-slate-500 text-center min-h-[1rem]"></p>
                             </div>
                         </div>

                         <div id="church-members-empty" class="text-xs text-slate-400 text-center py-4 bg-slate-50/50 rounded-xl border border-dashed border-slate-100">No hay equipo asignado.</div>
                         <div id="church-members-list" class="hidden space-y-2"></div>
                      </div>

                      <hr class="border-slate-100">

                      <!-- Admin Tools (Sync) -->
                      <div id="admin-sync-wrapper" class="hidden">
                          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-3">Herramientas Admin</p>
                          <button id="btn-sync-churches" class="w-full py-3 bg-slate-50 text-slate-500 rounded-xl font-bold text-xs hover:bg-[#293C74] hover:text-white transition-all flex items-center justify-center gap-2 border border-slate-200 border-dashed hover:border-transparent">
                             <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>
                             Sincronizar Data
                          </button>
                          <p id="sync-status" class="text-[10px] text-center text-slate-400 mt-2"></p>
                      </div>
                  </div>

                  <!-- Superadmin User Management (Admin Only) -->
                  <div id="admin-users-card" class="bg-slate-800 rounded-[2.5rem] p-6 text-white hidden relative overflow-hidden">
                     <div class="absolute top-0 right-0 p-4 opacity-5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                     </div>
                     <div class="relative z-10">
                        <h3 class="text-sm font-bold mb-2">Panel Superadmin</h3>
                        <p class="text-xs text-white/60 mb-4">Gestión rápida de administradores globales.</p>
                        
                        <div class="space-y-2">
                            <input id="admin-invite-email" class="w-full bg-white/10 border-none rounded-xl px-3 py-2 text-xs text-white placeholder-white/30 focus:ring-1 focus:ring-white/30" placeholder="Email nuevo admin">
                            <select id="admin-invite-role" class="w-full bg-white/10 border-none rounded-xl px-3 py-2 text-xs text-white focus:ring-1 focus:ring-white/30">
                               <option value="admin" class="text-black">Admin</option>
                               <option value="superadmin" class="text-black">Superadmin</option>
                            </select>
                            <button id="admin-invite-btn" class="w-full bg-white text-slate-900 py-2 rounded-xl text-xs font-bold hover:bg-white/90 transition">Crear Admin</button>
                            <p id="admin-invite-status" class="text-[10px] mt-1 opacity-60"></p>
                        </div>
                     </div>
                  </div>

                </div>
              </div>
              <!-- /church-dashboard-management -->
            </div>

            </div>

          </div>
        </div>
      </section>
    </div>
    <div id="onboarding-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 backdrop-blur-sm p-4">
      <div class="w-full max-w-2xl bg-white rounded-[2rem] shadow-2xl border border-slate-100 p-8 md:p-10">
        <div class="flex items-start justify-between gap-4 mb-6">
          <div>
            <p class="text-[10px] font-bold text-[#293C74] uppercase tracking-[0.3em]">Portal Maná</p>
            <h2 class="text-2xl md:text-3xl font-display font-bold text-[#293C74]">Completa tu perfil</h2>
            <p class="text-sm text-slate-600 mt-2">Estos datos nos ayudan a organizar tu participación y asignarte correctamente.</p>
          </div>
        </div>

        <form id="onboarding-form" class="space-y-5">
          <div class="space-y-2">
            <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Nombre completo</label>
            <input type="text" id="onboard-name" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium" placeholder="Tu nombre completo">
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div class="space-y-2">
              <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Teléfono / WhatsApp</label>
              <input type="text" id="onboard-phone" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium" placeholder="+57 300 000 0000">
            </div>
            <div class="space-y-2">
              <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Ciudad</label>
              <input type="text" id="onboard-city" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium" placeholder="Ciudad">
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div class="space-y-2">
              <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">País</label>
              <input type="text" id="onboard-country" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium" placeholder="País">
            </div>
            <div class="space-y-2">
              <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Mi relación con Maná</label>
              <select id="onboard-affiliation" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium">
                <option value="">Selecciona una opción</option>
                <option value="local">Asisto a una sede</option>
                <option value="online">Soy Maná Online</option>
                <option value="none">Prefiero no seleccionar</option>
              </select>
            </div>
          </div>
          <div id="onboard-church-wrapper" class="space-y-2 hidden">
            <label class="block text-[10px] font-bold text-[#293C74] uppercase tracking-widest ml-1">Nombre de la sede / iglesia</label>
            <input type="text" id="onboard-church-name" class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 text-[#293C74] focus:border-[#293C74] focus:ring-1 focus:ring-[#293C74] outline-none transition-all font-medium" placeholder="Ej: Maná Medellín">
          </div>

          <div class="flex items-center justify-between pt-4">
            <p id="onboarding-status" class="text-sm text-slate-600"></p>
            <button type="submit" class="bg-[#293C74] text-white px-10 py-4 rounded-2xl font-bold hover:shadow-lg hover:shadow-[#293C74]/20 hover:-translate-y-0.5 transition-all">
              Guardar perfil
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Church Selector Modal -->
    <ChurchSelector />

    <!-- Advanced Registration Modal -->
    <RegistrationModal />
  </main>

  <style>
    .nav-link.active {
      @apply bg-brand-teal text-white;
    }
    .nav-link.active span {
      @apply text-white;
    }
    .nav-link.active svg {
      @apply text-white;
    }

    @keyframes border-flow {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    .animate-border-flow {
      background-size: 200% 200%;
      animation: border-flow 6s ease infinite;
    }
  </style>

  <script>
    import '@scripts/portal-dashboard.js';
    import '@scripts/portal-user-event-view.js';
  </script>
</BaseLayout>

</body>
</html>
