---
import Layout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import ChapterPinned from '../components/home/ChapterPinned.astro';
import Panorama from '../components/home/Panorama.astro';
---

<Layout title="Ministerio Maná | Restauración y Vida">
  <main class="bg-cosmic-900 text-starlight-100 selection:bg-accent-cyan selection:text-cosmic-900">
    
    <!-- Hero Section -->
    <Hero />

    <!-- Chapter 1: The Origin -->
    <ChapterPinned
      id="origen"
      title="El Origen"
      subtitle="Nacimos de una visión divina para restaurar vidas quebrantadas y devolverles el propósito."
      image="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2672&auto=format&fit=crop"
    >
      <div slot="features" class="grid grid-cols-2 gap-6">
        <div class="flex flex-col gap-2">
          <span class="text-accent-cyan text-2xl">✦</span>
          <p class="text-sm text-starlight-300">Fundación en 2005</p>
        </div>
        <div class="flex flex-col gap-2">
          <span class="text-accent-cyan text-2xl">✦</span>
          <p class="text-sm text-starlight-300">Visión Global</p>
        </div>
      </div>
    </ChapterPinned>

    <!-- Panoramic Break -->
    <Panorama text="Donde Dios restaura, el propósito florece." />

    <!-- Chapter 2: Our Mission -->
    <ChapterPinned
      id="mision"
      title="Nuestra Misión"
      subtitle="Llevar la luz de la esperanza a cada rincón, transformando comunidades a través del amor y servicio."
      image="https://images.unsplash.com/photo-1518066000714-58c45f1a2c0a?q=80&w=2576&auto=format&fit=crop"
      reverse={true}
    >
      <div slot="features" class="grid grid-cols-2 gap-6">
        <div class="flex flex-col gap-2">
          <span class="text-accent-gold text-2xl">✦</span>
          <p class="text-sm text-starlight-300">Ayuda Social</p>
        </div>
        <div class="flex flex-col gap-2">
          <span class="text-accent-gold text-2xl">✦</span>
          <p class="text-sm text-starlight-300">Educación Espiritual</p>
        </div>
      </div>
    </ChapterPinned>

    <!-- Final CTA -->
    <section class="relative min-h-[60vh] flex flex-col items-center justify-center text-center px-4 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-t from-accent-cyan/10 to-transparent pointer-events-none"></div>
        <h2 class="font-display text-5xl md:text-8xl font-black text-starlight-100 mb-8">
            Únete al <br/> <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-cyan to-accent-gold">Movimiento</span>
        </h2>
        <a href="/contacto" class="group relative inline-flex items-center gap-3 px-8 py-4 rounded-full bg-starlight-100 text-cosmic-900 font-bold tracking-widest uppercase transition-transform hover:scale-105">
            Comienza Aquí
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 transition-transform group-hover:translate-x-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
        </a>
    </section>

  </main>
</Layout>
