---
import BaseLayout from '@layouts/BaseLayout.astro';
import MiniQuiz from '@components/MiniQuiz.astro';
const qs = [
  { q: '¿Cuáles son las siete iglesias del Apocalipsis?', options: ['Éfeso, Esmirna, Pérgamo, Tiatira, Sardes, Filadelfia, Laodicea', 'Roma, Antioquía, Jerusalén, Corinto, Tesalónica, Éfeso, Esmirna'], a: 0 },
  { q: '¿En qué isla escribió Juan el Apocalipsis?', options: ['Malta', 'Patmos', 'Chipre'], a: 1 },
  { q: 'En Capadocia se puede dormir en:', options: ['Barcos', 'Hotel cueva', 'Palacio romano'], a: 1 },
];
---
<BaseLayout title="Mini‑quiz: 7 Iglesias del Apocalipsis" description="Pon a prueba lo que sabes de la ruta Turquía + Islas Griegas.">
  <section class="section">
    <MiniQuiz title="Mini‑quiz: 7 Iglesias del Apocalipsis" questions={qs} client:load />
  </section>
</BaseLayout>
